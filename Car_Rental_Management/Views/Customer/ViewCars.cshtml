@model IEnumerable<Car_Rental_Management.Models.CarModal>

@{
    ViewData["Title"] = "Available Cars";
    Layout = "_CustomerLayout";
}

<h2 class="mt-4 mb-3">Available Cars for Rent</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No cars available at the moment.</div>
}
else
{
    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@car.Manufacturer @car.ModelName (@car.Year)</h5>
                        <p class="card-text">
                            Transmission: @car.TransmissionType <br />
                            Seating Capacity: @car.SeatingCapacity <br />
                            Price per day: <strong>@car.PricePerDay.ToString("C")</strong>
                        </p>
                        <a asp-controller="Customer" asp-action="BookCar" asp-route-id="@car.CarModelId" class="btn btn-success mt-auto">Book Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

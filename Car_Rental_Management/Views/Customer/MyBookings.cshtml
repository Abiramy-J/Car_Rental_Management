@model IEnumerable<Car_Rental_Management.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
    Layout = "_CustomerLayout";
}

<h2 class="mt-4 mb-3">My Bookings</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You have no bookings yet.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Car</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.CarModel.Manufacturer @booking.CarModel.ModelName (@booking.CarModel.Year)</td>
                    <td>@booking.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@booking.EndDate.ToString("yyyy-MM-dd")</td>
                    <td>@booking.TotalPrice.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}

@model Car_Rental_Management.Models.Payment

@{
    ViewData["Title"] = "Create Payment";
}

<h2 class="text-primary mb-4">Create Payment</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="BookingId" class="form-label"></label>
        <input asp-for="BookingId" class="form-control" placeholder="Enter Booking ID" />
        <span asp-validation-for="BookingId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" placeholder="Enter Amount" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PaymentMethod" class="form-label"></label>
        <select asp-for="PaymentMethod" class="form-select">
            <option value="">-- Select Payment Method --</option>
            <option>Credit Card</option>
            <option>Debit Card</option>
            <option>Cash</option>
            <option>UPI</option>
            <option>Net Banking</option>
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PaymentDate" class="form-label"></label>
        <input asp-for="PaymentDate" class="form-control" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="PaymentDate" class="text-danger"></span>
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-success">Submit Payment</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model Car_Rental_Management.Models.Payment

@{
    ViewData["Title"] = "Delete Payment";
}

<h2 class="text-danger mb-4">Delete Payment</h2>

<h5>Are you sure you want to delete this payment record?</h5>

<div class="border p-4 bg-light rounded mb-3">
    <dl class="row">
        <dt class="col-sm-3">Booking ID</dt>
        <dd class="col-sm-9">@Model.BookingId</dd>

        <dt class="col-sm-3">Amount</dt>
        <dd class="col-sm-9">Rs. @Model.Amount.ToString("N2")</dd>

        <dt class="col-sm-3">Payment Method</dt>
        <dd class="col-sm-9">@Model.PaymentMethod</dd>

        <dt class="col-sm-3">Payment Date</dt>
        <dd class="col-sm-9">@Model.PaymentDate.ToString("dd-MM-yyyy HH:mm")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="PaymentId" />
        <div class="text-end">
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

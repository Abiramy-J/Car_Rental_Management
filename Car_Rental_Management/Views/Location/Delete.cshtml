@model Car_Rental_Management.Models.Location

@{
    ViewData["Title"] = "Delete Location";
}

<h2 class="text-danger text-center">Delete Location</h2>
<hr />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4 class="mb-3">Are you sure you want to delete this location?</h4>

        <div class="border p-3 rounded bg-light mb-3">
            <dl class="row">
                <dt class="col-sm-4">Location Name</dt>
                <dd class="col-sm-8">@Model.LocationName</dd>

                <dt class="col-sm-4">Address</dt>
                <dd class="col-sm-8">@Model.Address</dd>
            </dl>
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="LocationId" />
            <div class="form-group text-center">
                <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>
